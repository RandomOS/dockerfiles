set encoding=utf-8
set fileencodings=ucs-bom,utf-8,gbk,big5,latin1

colorscheme desert
syntax enable
syntax on
set noerrorbells
set nocompatible
set nobackup
set mouse-=a
set tabstop=4
set softtabstop=4
set expandtab
set shiftwidth=4
set backspace=2
set cindent shiftwidth=4
set smartindent
set autoindent
set number
set ruler
set incsearch
set hlsearch
set incsearch
set nowrapscan
set ignorecase
set autochdir
set showcmd
set wildmenu
set foldmethod=syntax
set foldlevel=100
set history=20
set pastetoggle=<F9>
set list
set listchars=tab:>-,trail:-
filetype plugin indent on
